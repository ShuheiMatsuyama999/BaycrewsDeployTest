
.detail .contents {
	background: url(../images/js-pancake/cat_bg.gif) repeat;
	-webkit-background-size: 80px 80px;
}
.detail .news .title {
	padding: 0 0 10px 0;
}

.detail .news .title h2 {
	border-top: 2px solid #486880;
	color: #486880;
	background: url(../images/js-pancake/dot_x.gif) bottom left repeat-x;
	padding: 10px 10px 10px 5px;
	margin:0 10px;
}

